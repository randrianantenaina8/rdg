{% set currentPath = path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) %}
<div class="fr-container fr-pb-3w padding-body fr-mx-0 fr-mx-md-3w">

    <div id="app">
        <div class="">
            <section class="fr-container">
                <h1 class="fr-mb-1w">{{'front.datasetReuseds.list'|trans }}</h1>
                {% if datasetReuseds is defined and datasetReuseds is not empty %}
                <ul class="search-results fr-grid-row fr-grid-row--gutters fr-mt-2w">
                    {% for datasetReused in datasetReuseds %}
                    <li class="fr-col-md-4 fr-col-sm-6 fr-col-12 fr-mb-3v">
                        <article class="fr-card fr-card--no-icon fr-enlarge-link">
                            <div class="fr-card__body">
                                <div class="fr-card__content fr-p-2w">
                                    <h3 class="fr-card__title fr-text--md fr-mt-1w">
                                        <a href="{{ path('front.datasetReused.show', {'id': datasetReused.id}) }}">
                                            {{ datasetReused.publicationTitle }}
                                        </a>
                                    </h3>
                                    <p class="fr-card__detail fr-m-0">
                                        {{ datasetReused.reuseType }}
                                    </p>
                                    <p class="fr-card__desc fr-mt-1w text-mention-grey not-enlarged">
                                        PubliÃ© le {{ datasetReused.publicationDate|format_datetime('long', 'short', locale=('/en/' in currentPath ? 'en' : 'fr')) }}
                                        par
                                        <a class="fr-link" href="{{ path('front.datasetReused.show', {'id': datasetReused.id}) }}">
                                            {{ datasetReused.author }}
                                        </a>
                                    </p>
                                </div>
                            </div>
                            <div class="fr-card__header">
                                <div class="fr-card__img">
                                    <img src="{{ datasetReused.image }}" class="fr-responsive-img-dr" alt="{{ datasetReused.publicationTitle }}" loading="lazy" data-fr-js-ratio="true">
                                </div>
                            </div>
                        </article>
                    </li>
                    {% endfor %}

                </ul>
                {% endif %}



            </section>

        </div>
    </div>

    {{ knp_pagination_render(datasetReuseds) }}
</div>